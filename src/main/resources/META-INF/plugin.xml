<!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN, cannot be changed between the plugin versions. -->
    <id>com.purringlabs.gitworktree.git-worktree-manager</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Git Worktree Manager</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="purringlabs@gmail.com" url="https://github.com/MingLu0">Purring Labs</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        Simplify Git worktree management in Android Studio and IntelliJ IDEA.<br>
        <br>
        Create, list, and delete Git worktrees with just a few clicks. Perfect for Android developers who need to work on multiple features simultaneously without the overhead of switching branches or maintaining multiple clones.<br>
        <br>
        <b>Features:</b><br>
        <ul>
            <li>Create new worktrees with automatic branch creation</li>
            <li>View all worktrees in a convenient tool window</li>
            <li>Optionally copy selected ignored files into the new worktree</li>
            <li>Delete worktrees with one click</li>
            <li>Automatically open worktrees in new IDE windows</li>
        </ul>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends optional="true" config-file="compose.xml">com.intellij.modules.compose</depends>
    <depends optional="true" config-file="kotlin.xml">org.jetbrains.kotlin</depends>
    <depends>Git4Idea</depends>
    <resource-bundle>messages.MyMessageBundle</resource-bundle>

    <!-- Extensions defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
    </extensions>
</idea-plugin>